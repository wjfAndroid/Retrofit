<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_scroller"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0ff"
    tools:context="com.wjf.test.ScrollerActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="scroll_by"
        android:id="@+id/bt_scroll_by"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="scroll_to"
        android:id="@+id/bt_scroll_to"
        android:layout_below="@+id/bt_scroll_by"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
</RelativeLayout>
